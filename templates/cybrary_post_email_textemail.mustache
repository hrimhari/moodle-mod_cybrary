{{!
    @template mod_cybrary/cybrary_post_email_textemail

    Template which defines a cybrary post for sending in a single-post text email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * coursename
    * cybraryname
    * showdiscussionname
    * discussionname
    * discussionlink
    * subject
    * authorfullname
    * postdate
    * message
    * attachments
    * canreply
    * replylink
    * unsubscribecybrarylink
    * unsubscribediscussionlink
    * cybraryindexlink
}}
{{{ coursename }}} -> {{# str }} cybraries, cybrary {{/ str }} -> {{{ cybraryname }}}{{# showdiscussionname }} -> {{{ discussionname }}} {{/ showdiscussionname }}
{{ discussionlink }}
{{{ subject }}}
{{# str }} bynameondate, cybrary, {
        "name": {{# quote }}{{{ authorfullname }}}{{/ quote }},
        "date": {{# quote}}{{ postdate }}{{/ quote }}
    } {{/ str }}
---------------------------------------------------------------------
{{{ message }}}

{{{ attachments }}}
---------------------------------------------------------------------
{{# canreply }}
{{# str }} postmailinfolink, cybrary, {
        "coursename": {{# quote }}{{{ coursename }}}{{/ quote }},
        "replylink": {{# quote }}{{ replylink }}{{/ quote }}
    } {{/ str }}
{{/ canreply }}
{{# unsubscribecybrarylink }}
{{# str }} unsubscribelink, cybrary, {{{ unsubscribecybrarylink }}} {{/ str }}
{{/ unsubscribecybrarylink }}
{{# unsubscribediscussionlink }}
{{# str }} unsubscribediscussionlink, cybrary, {{{ unsubscribediscussionlink }}} {{/ str }}
{{/ unsubscribediscussionlink }}
{{# str }} digestmailpostlink, cybrary, {{{ cybraryindexlink }}} {{/ str }}
